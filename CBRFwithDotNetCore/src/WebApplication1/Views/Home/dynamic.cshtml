<head>
    <title>Изменение курса валют по датам</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>
     <script type="text/javascript">
        $(document).ready(function () {
            $('#periods').change(function () {
                if ($('#valute').val() == 00) return false;
                if ($('#periods').val() == 0) return false;
                var _per = $(periods).find('option:selected').val();
                var _vals = $(valute).find('option:selected').val();
                var target = $("#results");
                //var data_array = ['Дата', 'Стоимость'];
                //var data_chart = new google.visualization.DataTable();
                var getdates = [];
                var getcurses = [];

                target.empty();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("LoadCurses", "Select")",
                    data: {
                        "valName": _vals,
                        "period": _per
                    },
                    async: false,
                    success: function (data) {
                        var json = $.parseJSON(data);
                        target.append("<table border=\"1\" cellpadding=\"7\" cellspacing=\"0\">");
                        target.append("<tr><td align=\"center\"><ins><b>Дата</b></ins></td><td align=\"center\"><ins><b>Стоимость в рублях</b></ins></br></td></tr>");
                        for (var i = 0; i < json.length; ++i) {
                            target.append("<tr><td align=\"center\">" + json[i].day + "</td><td align=\"center\">"
                                + json[i].curse + "</td></tr>");
                            getdates.push(json[i].day);
                            getcurses.push(json[i].curse);
                        }
                        target.append("</table>");

                        google.charts.load('current', { 'packages': ['corechart'] });
                        google.charts.setOnLoadCallback(drawChart);
                        function drawChart() {
                            var _data=[];
                            //var Header= ['Дата', 'Курс'];
                            //_data.push(Header); 
                            _data = [['Дата', 'Курс']];
                            for (var i = 0; i < getdates.length; i++) {
                                var temp = [];
                                temp.push( getdates[i]);
                                temp.push( getcurses[i]);
                                _data.push(temp);
                            }
                            var dataa = new google.visualization.arrayToDataTable(_data);
                            var options = {
                                title: 'Курс валют',
                                hAxis: { title: 'Дата', titleTextStyle: { color: '#333' } },
                                vAxis: { minValue: 0 }
                            };
                                   var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
                            chart.draw(dataa, options);
                        }
                    },
                    dataType: 'html',
                    error: function (data) {
                        alert("Ошибка при запросе:" + data);
                    }
                });
            });
        });
    </script>
