@using Microsoft.AspNetCore.Mvc.Rendering

@using WebApplication1.Models
@{
    Layout = null;
}
<html>
<head>
    <title>Курс валют</title>
    <!--ajax. передавать серверу, чтобы он менял значение или в куки-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>


    <style>
        .design {
            display: inline-block; /* Строчно-блочный элемент */
            padding: 5px 20px; /* Добавляем поля */
            text-decoration: none; /* Убираем подчёркивание у ссылки */
            cursor: pointer; /* Курсор в виде руки */
            background: #deefff; /* Фон для браузеров, не поддерживающих градиент */
            /* Градиент */
            background: -moz-linear-gradient(top, #deefff 0%, #98bede 100%);
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#deefff), color-stop(100%,#98bede));
            background: -webkit-linear-gradient(top, #deefff 0%,#98bede 100%);
            background: -o-linear-gradient(top, #deefff 0%,#98bede 100%);
            background: -ms-linear-gradient(top, #deefff 0%,#98bede 100%);
            background: linear-gradient(top, #deefff 0%,#98bede 100%);
            border-radius: 10px; /* Скругляем уголки */
            border: 1px solid #008; /* Добавляем синюю рамку */
            font: 12px/1 Arial, sans-serif; /* Рубленый шрифт */
            color: #2c539e; /* Цвет текста и ссылки */
        }
    </style>

</head>
<body>
    <center>
        @*<button class="design" href="dynamic" onclick="">temp</button>*@
        @*<button class="design" href="convert">3</button>
            <button class="design" href="settings">4</button>*@
        <hr>
        @*<img src="/1.png"/>*@
        <a href="/Home/Index/" class="design">Начальная страница</a>
               
        @*<img src="/2.png"/>*@
        <a href="/Home/Dynamic/" class="design">График</a>
                
        @*<img src="/3.png"/>*@
        <a href="/Home/Convert/" class="design">Конвертер</a>
             
        @*<img src="/4.png"/>*@
        <a href="/Home/Settings/" class="design">Настройки</a>
        
        <hr>
    </center>
    <h3>Курс валют от @ViewBag.LoadDate</h3>

    <table>
        <tr>
            <td><b>Валюта</b></td>
            <td><b>Стоимость</b></td>
            @*<td><b>Аббревиатура</b></td>
            <td><b>Имя</b></td>*@
        </tr>      
        @foreach (var val in (Dictionary<string, string>)ViewBag.Vals)
            {
            <tr>
                <td>@val.Key</td>
                <td>@val.Value</td>
                @*<td>@val.ChCode</td>
                <td>@val.WorldName</td>*@
            </tr>
        }
    </table>
</body>

</html>
